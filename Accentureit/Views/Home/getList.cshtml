@using BOL;

@{
    ViewData["head"] = "List Of Employees ";
}

<div class="text-center">
    <h1 class="display-4">List Of Employees</h1>
    <p>#Unity Is Strength !</p>
</div>
<div>
     <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Employee Name</th>
                <th scope="col">Employee email</th>
                <th scope="col">Employee password</th>
                <th scope="col">Employee Department</th>
                <th scope="col">Employee joindate</th>
                <th scope="col">Employee delete</th>
               
            
            </tr>
        </thead>
        <tbody>
            @{
                @foreach(Emp E in ViewBag.List)
                {
                    <tr>
                        <td>@E.eid</td>
                        <td>@E.name</td>
                        <td>@E.email</td>
                        <td>@E.psw</td>
                        <td>@E.department</td>
                        <td>@E.date</td>
                    </tr>
                }
            }
        </tbody>
    </table>
<div/>
<div>
        <form action="/Home/GetByID" method="post">
            <div class="mb-3">
                <label for="id" class="form-label">Employee ID</label>
                <input type="text" class="form-control" id="id" name="id" required>
            </div>
            <button type="submit" class="btn btn-primary">Edit Employee</button>
        </form>

        <form action="/Home/delete" method="post">
            <div class="mb-3">
                <label for="id" class="form-label">Employee ID</label>
                <input type="text" class="form-control" id="id" name="id" required>
            </div>
            <button type="submit" class="btn btn-primary">Delete Employee</button>
        </form>
</div>