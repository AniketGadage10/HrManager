

<form action="/Home/Register" method="post">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label for="psw-repeat"><b>ID</b></label>
        <input type="text" name="eid" id="eid" required>

         <label for="psw-repeat"><b>Full Name</b></label>
        <input type="text" name="name" id="name" required>

        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" id="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" id="psw" required></br>

        <label for="email"><b>Department</b></label>
        <input type="text" name="department" id="department" required>

        <label for="email"><b>JoinDate</b></label>
        <input type="date" placeholder="Enter Email" name="date" id="date" required>
        <hr>
        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a href="#">Sign in</a>.</p>
    </div>

</form>