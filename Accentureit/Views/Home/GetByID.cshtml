
@using BOL;

<div class="text-center">
    <h1 class="display-4">Let's Get The Employee By ID</h1>
</div>
<div>

    @{
        Emp e = ViewBag.EMP;

        <form action="/Home/Update" method="post">
            <div class="mb-3">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" id="eid" name="eid" readonly value="@e.eid">
            </div>
            <div class="mb-3">
                <label for="empname" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="@e.name">
            </div>
            <div class="mb-3">
                <label for="designation" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" value="@e.email">
            </div>
            <div class="mb-3">
                <label for="department" class="form-label">Password</label>
                <input type="text" class="form-control" id="psw" name="psw" value="@e.psw">
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">Deapartment</label>
                <input type="text" class="form-control" id="department" name="department" value="@e.department">
            </div>
            <div class="mb-3">
                <label for="salary" class="form-label">Joindate</label>
                <input type="date" class="form-control" id="date" name="date">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I Request Politely To Update These Details, Sorry For Inconvenience !</label>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    
    }
</div>